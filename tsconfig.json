{
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es7", "dom", "es2016", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "*": [ "*", "src/*" ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ]
}